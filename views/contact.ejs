<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h1>Contact Us</h1>
            <p class="lead">Get in touch with Minjaz Group for your construction needs</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <h2>Get In Touch</h2>
            <div class="mb-4">
                <img src="https://images.pexels.com/photos/1396132/pexels-photo-1396132.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="img-fluid rounded mb-3" alt="Minjaz Group office building in Riyadh, Saudi Arabia">
            </div>
            <div class="mb-4">
                <h5>Office Address</h5>
                <p>Riyadh, Saudi Arabia</p>
                <p>Professional construction company headquarters</p>
            </div>
            <div class="mb-4">
                <h5>Phone</h5>
                <p>+966 XX XXX XXXX</p>
            </div>
            <div class="mb-4">
                <h5>Email</h5>
                <p>info@minjazgroup.com</p>
            </div>
            <div class="mb-4">
                <h5>Business Hours</h5>
                <p>Sunday - Thursday: 8:00 AM - 6:00 PM</p>
                <p>Friday - Saturday: Closed</p>
            </div>
        </div>

        <div class="col-md-6">
            <h2>Send us a Message</h2>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>

            <form action="/contact" method="POST" id="contactForm">
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name *</label>
                    <input type="text" class="form-control" id="name" name="name" required
                           value="<%= typeof formData !== 'undefined' ? formData.name || '' : '' %>">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email Address *</label>
                    <input type="email" class="form-control" id="email" name="email" required
                           value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>">
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="phone" name="phone"
                           value="<%= typeof formData !== 'undefined' ? formData.phone || '' : '' %>">
                </div>

                <div class="mb-3">
                    <label for="service" class="form-label">Service Type</label>
                    <select class="form-select" id="service" name="service">
                        <option value="">Select a service</option>
                        <option value="residential" <%= typeof formData !== 'undefined' && formData.service === 'residential' ? 'selected' : '' %>>Residential Construction</option>
                        <option value="commercial" <%= typeof formData !== 'undefined' && formData.service === 'commercial' ? 'selected' : '' %>>Commercial Construction</option>
                        <option value="industrial" <%= typeof formData !== 'undefined' && formData.service === 'industrial' ? 'selected' : '' %>>Industrial Construction</option>
                        <option value="renovation" <%= typeof formData !== 'undefined' && formData.service === 'renovation' ? 'selected' : '' %>>Renovation & Remodeling</option>
                        <option value="other" <%= typeof formData !== 'undefined' && formData.service === 'other' ? 'selected' : '' %>>Other</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Message *</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required><%= typeof formData !== 'undefined' ? formData.message || '' : '' %></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>